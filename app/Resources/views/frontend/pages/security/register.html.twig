{% extends 'frontend/templates/default.html.twig' %}

{% block page_id %}{{ parent() }} register{% endblock %}

{% block title %}Inscription{% endblock %}

{% block content %}

    <div class="defaultContainer">

        <div class="mainContent">

            <div class="searchByCol">
                <div class="searchByCol__title">
                    <h4>Recherche par popularité</h4>
                </div>
                <div class="searchByCol__list">
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Profils populaires
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Tendances
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Spécialité
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Classement
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Menu
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Région
                    </li>
                </div>
                <div class="searchByCol__title">
                    <h4>Recherche par plats</h4>
                </div>
                <ul class="searchByCol__list">
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Nouilles
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Salades
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Soupes
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Fruits de mer
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Sushis
                    </li>
                    <li>
                        <img src="{{ asset('assets/img/searchByCol1.png') }}" alt="">
                        Viandes
                    </li>
                </ul>
            </div>

            <div class="forms">

                <div class="forms__title">
                    <img src="{{ asset('assets/img/lockGreen.png') }}" alt="">
                    <h2>Inscription</h2>
                </div>

                <div class="forms__inputsContainer">
                    {{ form_start(form) }}
                        {{ form_row(form.username) }}
                        {{ form_row(form.email) }}

                        <div class="forms__rows">
                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                        </div>

                        <div class="forms__rows">
                            {{ form_row(form.plainPassword.first) }}
                            {{ form_row(form.plainPassword.second) }}
                        </div>
                        {{ form_row(form.image) }}

                        <button class="forms__inputs forms__inputsFull forms__inputsSubmit" type="submit">Je m'inscris</button>
                    {{ form_end(form) }}
                </div>

            </div>

        </div>

        <div class="ads">
            <img src="{{ asset('assets/img/_PUB1.png') }}" alt="">
            <img src="{{ asset('assets/img/_PUB2.png') }}" alt="">
        </div>

{% endblock %}
