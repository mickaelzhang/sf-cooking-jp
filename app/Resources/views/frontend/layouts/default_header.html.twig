<header class="defaultHeader">
    <div class="defaultHeader__container">
        <a href="{{ path('homepage') }}">
            <img class="defaultHeader__logo" src="{{ asset('assets/img/logo.png') }}" alt="">
        </a>
        <div class="defaultHeader__menu">
            <a class="defaultHeader__nav" href="{{ path('recipe_popular') }}">
                <img class="defaultHeader__imgs" src="{{ asset('assets/img/food.png') }}" alt="">
                <span class="defaultHeader__texts">Recettes</span>
            </a>

            <a class="defaultHeader__nav" href="#">
                <img class="defaultHeader__imgs" src="{{ asset('assets/img/pot.png') }}" alt="">
                <span class="defaultHeader__texts">Cat√©gories</span>
            </a>

            <a class="defaultHeader__nav" href="{{ path('recipe_new') }}">
                <img class="defaultHeader__imgs" src="{{ asset('assets/img/write.png') }}" alt="">
                <span class="defaultHeader__texts">Ecrire une recette</span>
            </a>

            <input class="defaultHeader__search" type="search" name="" value="" placeholder="Rechercher">

            <div class="defaultHeader__login">
                <img src="{{ asset('assets/img/lock.png') }}" alt="">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="defaultHeader__texts" href="{{ path('logout') }}">Deconnexion</a>
                {% else %}
                    <a class="defaultHeader__texts" href="{{ path('login') }}">Se connecter</a>
                {% endif %}
            </div>

        </div>
    </div>
</header>
