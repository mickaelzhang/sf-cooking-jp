# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
charset = utf-8
end_of_line = lf


# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/
[*.php,*.yml]
indent_size = 4

[*.js,*.scss]
indent_size = 2
